<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:paddingBottom="10dp"
        android:nestedScrollingEnabled="false">

        <TextView
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="todoName"
            android:id="@+id/titleLabel"
            android:layout_weight="0.03"
            android:maxLines="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="A description of this to do item"
            android:id="@+id/descriptionLabel"
            android:maxLines="4"
            android:lines="3"
            android:minLines="1"
            android:maxLength="25"
            android:ellipsize="end"
            android:layout_below="@+id/titleLabel"
            android:layout_alignLeft="@+id/titleLabel"
            android:layout_alignStart="@+id/titleLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Date"
            android:id="@+id/viewDate"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp"
            android:layout_above="@+id/descriptionLabel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Not Complete"
            android:id="@+id/completeText"
            android:textColor="#d24e4e"
            android:layout_alignTop="@+id/descriptionLabel"
            android:layout_alignRight="@+id/viewDate"
            android:layout_alignEnd="@+id/viewDate" />


    </RelativeLayout>
</FrameLayout>