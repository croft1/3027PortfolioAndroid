<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NameGenerator.NameGenMain">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputFirstName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/generateButton"
        android:layout_alignStart="@+id/generateButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputLastName"
        android:layout_below="@+id/inputFirstName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/generateButton"
        android:layout_alignStart="@+id/generateButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputMaiden"
        android:layout_below="@+id/inputLastName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/generateButton"
        android:layout_alignStart="@+id/generateButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputBirth"
        android:layout_below="@+id/inputMaiden"
        android:layout_alignRight="@+id/inputMaiden"
        android:layout_alignEnd="@+id/inputMaiden"
        android:layout_alignLeft="@+id/generateButton"
        android:layout_alignStart="@+id/generateButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputBrand"
        android:layout_below="@+id/inputBirth"
        android:layout_alignRight="@+id/inputBirth"
        android:layout_alignEnd="@+id/inputBirth"
        android:layout_alignLeft="@+id/generateButton"
        android:layout_alignStart="@+id/generateButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:id="@+id/generateButton"
        android:layout_below="@+id/inputBrand"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:onClick="generateButtonClicked" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Name"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/inputFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lst Name"
        android:id="@+id/textView3"
        android:layout_below="@+id/inputFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maiden Name"
        android:id="@+id/textView4"
        android:layout_below="@+id/inputLastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Birthplace"
        android:id="@+id/textView5"
        android:layout_below="@+id/inputMaiden"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fave Brand"
        android:id="@+id/textView6"
        android:layout_below="@+id/inputBirth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
